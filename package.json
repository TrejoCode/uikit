{
  "name": "@trejocode/uikit",
  "description": "Collection of UI Components for trejocode projects",
  "version": "0.0.0-semantic-release",
  "type": "module",
  "main": "dist/bundle.js",
  "module": "dist/bundle.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "uikit",
    "trejocode",
    "frontend",
    "ui",
    "components"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trejocode/uikit.git"
  },
  "bugs": {
    "url": "https://github.com/trejocode/uikit/issues"
  },
  "author": "Trejocode",
  "license": "MIT",
  "scripts": {
    "dev": "npm run storybook",
    "build-vite": "tsc -b && vite build",
    "build": "npm run build:tailwind && rollup --config",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./src/styles/build.css",
    "prepare": "husky"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.541.0",
    "react": ">=19.1.0",
    "react-dom": ">=19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/addon-themes": "^9.1.2",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "rollup": "^4.46.3",
    "rollup-plugin-import-css": "^4.0.2",
    "semantic-release": "^24.2.7",
    "storybook": "^9.1.2",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=19.1.0",
    "react-dom": ">=19.1.0"
  }
}
